# $Header: $

BASE_WLAN0_IP="192.168.1."
ROBOT_ID="${ID}"

depend() {
  need dbus
}

start() {
  ifconfig wlan0 up
  wpa_supplicant -iwlan0 -Dnl80211 -c/etc/wpa_supplicant/wpa_supplicant.conf -B
  sleep 1
  ifconfig wlan0 "${BASE_WLAN0_IP}${ROBOT_ID}" netmask 255.255.255.0
}

stop() {
  killall wpa_supplicant
  ifconfig wlan0 down
}

restart() {
  stop
  sleep 2
  start
}
